<h1>Write a review for <%= @restaurant.name %></h1>


<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.label :rating %>
  <%= f.select :rating, [0, 1, 2, 3, 4, 5] %><br>
  <%= f.submit "Add this review", class: 'btn btn-primary' %>
<% end %>
