<h1>Create a restaurant</h1>

<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.label :category %>
  <%= f.select :category, ["chinese", "italian", "japanese", "french", "belgian"] %><br>
  <%= f.submit "create this restaurant", class: "btn btn-primary" %>
<% end %>
